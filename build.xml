         		<param name="-oldapidir" value="${jdiff.xml.dir}"/>
         		<param name="-newapidir" value="${jdiff.xml.dir}"/>
         		<param name="-javadocold" value="${jdiff.stable.javadoc}"/>
         		<param name="-javadocnew" value="../../api/"/>
