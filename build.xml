	<mkdir dir="${jdiff.build.dir}"/>
        <javadoc sourcepath="${java.src.dir}"
             destdir="${jdiff.build.dir}"
	     excludepackagenames="org.apache.jute"	
             sourceFiles="${jdiff.home}/Null.java">
